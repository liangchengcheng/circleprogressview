<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47d8af"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mddemo.library.com.activityanimation_master.MainActivity"
    tools:showIn="@layout/activity_main">

    <mddemo.library.com.activityanimation_master.CircleProgressBar
        android:id="@+id/cb_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:circleColor="#336699"
        app:circleProgressColor="#ffffff"
        app:circleWidth="2dp"
        app:style="STROKE"
        app:textColor="#ffffff"
        app:textIsDisplayable="true"
        app:textSize="40sp" />
</RelativeLayout>
